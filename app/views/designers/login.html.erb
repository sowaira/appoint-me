
<div class="page-header">
	<h1>Login</h1>
</div>

<%= form_tag create_session_designer_path, method: "POST", class: "js-form" do %>
	<div class="form-group">
		<label for="email">Email:</label>
		<input class="form-control validate[required, custom[email]]"  name="designer[email]" type="text" />
	</div>
	<div class="form-group">
		<label for="password">Password:</label>
		<input type="password" id="password" name="designer[password]" class="form-control validate[required]"/>
	</div>
	<button type="submit" name="commit" class="btn btn-lg btn-danger" />Login</button>
<% end %>