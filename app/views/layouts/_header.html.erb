<div class="header">
	<%= link_to "Appoint-me", root_url, class:"pull-left menu-item" %>


	<% if not current_designer and not current_business %>
		<%#= link_to "Signup as designer", signup_designer_path , class:"pull-right menu-item" %>
		<%= link_to "Login as designer", login_designer_path , class:"pull-right menu-item" %>
		<%= link_to "Business space", login_business_path , class:"pull-right menu-item" %>
	<% end %>

	<% if current_business %>
		<%= link_to "Logout", logout_business_path, class:"pull-right menu-item" %>
		<%#= link_to "Settings", settings_designer_path, class:"pull-right menu-item" %>
		<div class="pull-right menu-item">
			<img src="" style="<%= "background-image:url(#{current_business.picture.url })" if current_business.picture.present? %>" class="user-picture" width="25" height="25">
		</div>
		<div class="pull-right menu-item">
			<i><%=link_to "#{current_business.name} dashboard", business_dashboard_path  %></i>
		</div>
	<% end %>
	
	<% if current_designer %>

		<%= link_to "Logout", logout_designer_path, class:"pull-right menu-item" %>
		<%= link_to "Settings", settings_designer_path, class:"pull-right menu-item" %>
		<div class="pull-right menu-item">
			<img src="" style="<%= "background-image:url(#{current_designer.picture.url })" if current_designer.picture.present? %>" class="user-picture" width="25" height="25">
		</div>
		<div class="pull-right menu-item">
			Hi <i><%= current_designer.forename %></i>, 
		</div>
	<% end %>
</div>