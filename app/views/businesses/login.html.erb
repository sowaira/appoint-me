<div class="page-header">
	<h1>Access to your business account</h1>
</div>

<%= form_tag create_session_business_path, method: "POST", class: "js-form" do %>
	<div class="form-group">
		<label for="email">Email:</label>
		<input class="form-control validate[required, custom[email]]"  name="business[email]" type="text" />
	</div>
	<div class="form-group">
		<label for="password">Password:</label>
		<input type="password" id="password" name="business[password]" class="form-control validate[required]"/>
	</div>
	<button type="submit" name="commit" class="btn btn-lg btn-danger" />Enter</button>
<% end %>