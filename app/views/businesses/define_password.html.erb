
<div class="page-header">
	<h1>Define Your password</h1>
</div>

<%= form_tag reset_password_business_path, method: "POST", class: "js-form" do %>
	<div class="form-group">
		<label for="password">Password:</label>
		<input type="password" id="password" name="business[password]" class="form-control "/>
	</div>
	<div class="form-group">
		<label for="password_confirmation">Password Confirmation:</label>
		 <input type="password" name="business[password_confirmation]" class="form-control " />
	</div>
	<button type="submit" name="commit" class="btn btn-lg btn-danger" />Define Password</button>
<%end%>